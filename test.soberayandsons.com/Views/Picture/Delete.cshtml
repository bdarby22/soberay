@model Soberay.ViewModels.PictureViewModel

@{
    ViewBag.Title = "Delete";
    var picurl = string.Format("{0}{1}", ViewBag.ImgPrefix, Model.S3Url);
    Layout = Url.Content("../Shared/_newLayoutNoSide.cshtml");
}

<h2>Delete</h2>
<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Picture</legend>
    <div class="display-label">InventoryId</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Id)
    </div>
    <div class="display-label">Actual Image</div>
    
    <div class="display-field">
        <img src="@picurl" alt="s3 image" height="300" width="400"/>
    </div>

    <div class="display-label">Name</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>
@using (Html.BeginForm())
{     
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.PictureId)
    @Html.HiddenFor(model => model.Name)
    @Html.HiddenFor(model => model.S3Url)
    <p>
        <input id="submit" name="submit" type="submit" value="Delete" /> |
        @Html.ActionLink("Back to Item", "Upload", "Picture", new { id = Model.Id },null)
    </p>
}
@{
    var x = 4;   
}
</fieldset>
