                if (item.Details.Length >= 100)
                {
                    <td>
                        @string.Format("{0}...", item.Details.Substring(0, 100))
                    </td>
                }
                else
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.Details)
                    </td>                
                }
            }
            else
            {
                    <td>
                        @Html.DisplayFor(modelItem => item.Details)
                    </td> 
            }
            
            @if (User.IsInRole("Authenticated"))
